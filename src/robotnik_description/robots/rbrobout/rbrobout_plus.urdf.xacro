<?xml version="1.0" ?>
<robot
  name="rbrobout"
  xmlns:xacro="http://wiki.ros.org/xacro">
  <xacro:include
    filename="$(find robotnik_description)/urdf/bases/rbrobout/rbrobout_base.urdf.xacro" />
  <xacro:include
    filename="$(find robotnik_description)/urdf/bases/rbrobout/rbrobout_top_cover.urdf.xacro" />
  <xacro:include
    filename="$(find robotnik_description)/urdf/structures/ewellix/all_ewellix_lift.urdf.xacro" />
  <xacro:include
    filename="$(find robotnik_description)/urdf/arms/ur_macro.urdf.xacro" />
  <xacro:include
    filename="$(find robotnik_sensors)/urdf/all_sensors.urdf.xacro" />

  <!-- ARGUMENTS -->
  <xacro:arg
    name="namespace"
    default="robot" />
  <xacro:arg
    name="prefix"
    default="" />
  <xacro:arg
    name="gazebo_ignition"
    default="false" />
  <xacro:arg
    name="ur_type"
    default="ur5e" />

  <!-- RB-ROBOUT -->
  <xacro:rbrobout
    prefix="$(arg prefix)"
    gazebo_ignition="$(arg gazebo_ignition)"
    namespace="$(arg namespace)" />
  <xacro:top_cover
    prefix="$(arg prefix)"
    parent="$(arg prefix)base_link">
    <origin
      xyz="0 0 -0.1"
      rpy="0 0 0" />
  </xacro:top_cover>
  <xacro:ewellix_lift_900mm
    prefix="$(arg prefix)lift_"
    parent="$(arg prefix)base_link">
    <origin
      xyz="-0.76 0.0 0.18"
      rpy="0 0 0" />
  </xacro:ewellix_lift_900mm>

  <!-- ARMS -->
  <xacro:arm_ur
    ur_type="$(arg ur_type)"
    frame_prefix="$(arg prefix)arm_"
    parent="$(arg prefix)lift_ewellix_lift_top_link"
    gazebo_ignition="$(arg gazebo_ignition)">
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
  </xacro:arm_ur>

  <!-- IMU -->
  <xacro:sensor_vectornav
    frame_prefix="$(arg prefix)imu_"
    parent="$(arg prefix)base_link"
    node_namespace="$(arg namespace)"
    gazebo_ignition="$(arg gazebo_ignition)">
    <origin
      xyz="0.3 -0.3 0.0725"
      rpy="0 0 0" />
  </xacro:sensor_vectornav>

  <!-- LASERS -->
  <xacro:sensor_sick_microscan3
    frame_prefix="$(arg prefix)front_laser_"
    parent="$(arg prefix)base_link"
    node_namespace="$(arg namespace)"
    node_name="front_laser"
    gazebo_ignition="$(arg gazebo_ignition)">
    <origin
      xyz="0.8 0.366 -0.06"
      rpy="0 0 ${1/4*pi}" />
  </xacro:sensor_sick_microscan3>
  <xacro:sensor_sick_microscan3
    frame_prefix="$(arg prefix)rear_laser_"
    parent="$(arg prefix)base_link"
    node_namespace="$(arg namespace)"
    node_name="rear_laser"
    gazebo_ignition="$(arg gazebo_ignition)">
    <origin
      xyz="-0.8 -0.366 -0.06"
      rpy="0 0 ${-3/4*pi}" />
  </xacro:sensor_sick_microscan3>
  
  <!-- CAMERAS -->
  <xacro:sensor_intel_realsense_d435
    frame_prefix="$(arg prefix)front_rgbd_camera_"
    parent="$(arg prefix)base_link"
    node_namespace="$(arg namespace)"
    node_name="front_camera"
    gazebo_ignition="$(arg gazebo_ignition)">
    <origin
      xyz="0.835 0 0.1555"
      rpy="0 0 0" />
  </xacro:sensor_intel_realsense_d435>
</robot>
